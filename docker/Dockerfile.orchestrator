# Dalston Orchestrator
#
# Batch job scheduler that expands jobs into task DAGs and schedules them.
#
# Build from repo root:
#   docker build -f docker/Dockerfile.orchestrator -t dalston/orchestrator:latest .

FROM python:3.11-slim

WORKDIR /app

# Copy and install Python dependencies
COPY pyproject.toml .
COPY dalston/ dalston/

RUN pip install --no-cache-dir -e ".[orchestrator]"

CMD ["python", "-m", "dalston.orchestrator.main"]
